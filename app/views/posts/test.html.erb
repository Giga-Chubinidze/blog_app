<div class="columns">
  <div class="column is-8 is-centered">

    <%= simple_form_for @post do |f| %>
      <%= f.error_notification %>

        <div class="columns">

          <div class="field column is-9">
            <div class="control">
              <%= f.input :title, :label => t("Title"), required: false, input_html: { class: "input"}, wrapper: false, label_html: { class:"label" } %>
            </div>
          </div>

        </div>


        <div class="field">
          <div class="control">
            <%= f.input :body, :label => "Body", required: false, input_html: { class:"textarea" }, wrapper: false, label_html: { class:"label" } %>
          </div>
        </div>


        <div class="field is-grouped">
          <div class="control">
            <%= f.button :submit, "Create",  class: 'button is-warning' %>
            <%= link_to "Cancel", root_path, class:'button is-light' %>
          </div>
        </div>

      <% end %>
  </div>
</div>