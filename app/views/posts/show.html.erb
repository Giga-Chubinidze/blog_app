<div class="content">
  <h1>
    <%= @post.title %>
  </h1>
  <hr/>
  <p>
    <%= @post.body %>
  </p>
  <small>
    <%= @post.user.email %>
  </small>
  <br/>
  <br/>
  <small>
    <%= link_to "Back", root_path, class:"btn btn-primary" %>
  </small>
  <% if current_user == @post.user %>
    <small>
      <%= link_to "Edit", edit_post_path(@post), class:"btn btn-primary" %>
    </small>
    <small>
      <%= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-primary" %>
    </small>
  <% end %>
</div>
<br/>

<div class="watcher">
  <%= render "comments/form", post: @post, comment: @comments %>
  <h2>Comments</h2>
  <hr>
  <% @comments.each do |comment|%>
    <%= render "comments/comment", post: @post, comment: comment %>
  <% end %>
  <br>
</div>

<br><br><br>