.content
  %h1= @post.title
  %hr
  %p= @post.body
  %small= @post.user.email
  %br
  %br
  %small= link_to "Back", root_path, class:"btn btn-primary"

  - if current_user == @post.user
    %small= link_to "Edit", edit_post_path(@post), class:"btn btn-primary"
    %small= link_to "Delete", @post, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-primary"
